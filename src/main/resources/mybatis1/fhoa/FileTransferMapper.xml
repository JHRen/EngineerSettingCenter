<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FileTransferMapper">
	
	<!--表名 -->
	<sql id="tableName">
		oa_file_transfer
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		title,
		requestID,	
		userID,	
		userGroup,	
		leaderApprovalTime,	
		managerApprovalTime,	
		sourcePath,
		destinationPath,
		createTime,
		status
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{title},
        #{requestID},  
        #{userID}, 
        #{userGroup},  
        #{leaderApprovalTime}, 
        #{managerApprovalTime},    
        #{sourcePath},
        #{destinationPath},
        #{createTime},
        #{status}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ID = #{ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			title	            =  #{title},
		    requestID           =  #{requestID},  
		    userID              =  #{userID}, 
		    userGroup           =  #{userGroup},  
		    leaderApprovalTime  =  #{leaderApprovalTime}, 
		    managerApprovalTime =  #{managerApprovalTime},    
		    sourcePath          =  #{sourcePath},
		    destinationPath     =  #{destinationPath},
		    destinationPath     =  #{destinationPath},
		    status = #{status}
		where 
		ID = #{ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
	    	ID,
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			ID = #{ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
	        title,
	        requestID,  
	        userID, 
	        userGroup,  
	        leaderApprovalTime, 
	        managerApprovalTime,    
	        sourcePath,
	        destinationPath,
	        createTime,
	        status
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
					title LIKE '%'+#{pd.keywords}+'%'
					 
				)
		</if>
		  <if test="pd.status!= null and pd.status != ''"><!-- 关键词检索 -->
            and
                (
                    status = #{pd.status} 
                     
                )
        </if>
		 [fhstart]order by createTime desc[fhend]
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
</mapper>