<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FhfileViewHistoryMapper">

	<!--表名 -->
	<sql id="tableName">
		OA_FHFILE_VIEWHISTORY
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		FHFILE_ID,
		USER_ID,
		USER_NAME,
		VIEW_TIME,
		FIRST_VIEW_TIME
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FHFILE_ID},
		#{USER_ID},
		#{USER_NAME},
		#{VIEW_TIME},
		#{FIRST_VIEW_TIME}
	</sql>

	<!-- 新增 -->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		FHFILE_ID = #{FHFILE_ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		VIEW_TIME = #{VIEW_TIME}
		where
		FHFILE_ID = #{FHFILE_ID} and
		USER_ID = #{USER_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		FHFILE_ID = #{FHFILE_ID} and
		USER_ID = #{USER_ID}
	</select>



	<!-- 列表通过ID查找 -->
	<select id="listById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		FHFILE_ID = #{FHFILE_ID}
		order by FIRST_VIEW_TIME desc
		      
	</select>



</mapper>