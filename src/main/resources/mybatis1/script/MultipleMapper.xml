<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MultipleMapper">
	<!--表名 -->
	<sql id="tableName">
		SCRIPT_INTEL_MULTIPLE_FLODER_RULER
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
	  ID,
	  FILE_PATH,
	  FILE_KEYWORDS,
	  FILE_LIMIT
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
	  #{ID},
	  #{FILE_PATH},
      #{FILE_KEYWORDS},
      #{FILE_LIMIT}
	</sql>
	
	
    <!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
	select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
					FILE_PATH  LIKE '%'+#{pd.keywords}+'%'
				
				)
		</if>

		[fhstart]order by FILE_PATH desc[fhend]
			
	</select>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
		  FILE_PATH,
          FILE_KEYWORDS,
          FILE_LIMIT
		) values (
		  #{FILE_PATH},
          #{FILE_KEYWORDS},
          #{FILE_LIMIT}
		)
	</insert>
	
	<!-- 通过id查询 -->
	<select id="findById" parameterType="pd" resultType="pd" >
	select 
		 <include refid="Field"></include>
     from <include refid="tableName"></include>
      where ID=#{ID}
	</select>
	
	   <!-- 查询是否有重复主键 -->
    <select id="finBySimilar" parameterType="pd" resultType="int">
        select
        count([ID])
        from
        <include refid="tableName"></include>
        where
        1=1 
        and FILE_PATH  = #{FILE_PATH}
        
        and FILE_KEYWORDS = #{FILE_KEYWORDS}
    </select>
    
		<!-- 修改-->
	<update id="edit" parameterType="pd">
	update <include refid="tableName"></include> set
		FILE_PATH  = #{FILE_PATH},
		FILE_KEYWORDS = #{FILE_KEYWORDS},
		FILE_LIMIT  =   #{FILE_LIMIT}
     where
     ID=#{ID}
	</update>
	
	<!-- 删除 -->
	   <delete id="delete" parameterType="pd">
        delete from
        <include refid="tableName"></include>
        where
        [ID] = #{ID}
    </delete>
</mapper>